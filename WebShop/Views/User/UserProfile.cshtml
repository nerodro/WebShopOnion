@model UserViewModel
@using TestOnion.Models

<form asp-action="UserProfile" role="form">

    <div class="modal-body form-horizontal">
        <div class="row">
            <input asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <input asp-for="FirstName" class="form-control" readonly/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <input asp-for="LastName" class="form-control"  readonly/>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <input asp-for="Email" class="form-control" readonly/>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <input asp-for="Address" class="form-control" readonly/>
                </div>
            </div>
        </div>
    </div>
</form>