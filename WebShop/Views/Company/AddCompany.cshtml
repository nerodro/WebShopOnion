@model CompanyViewModel
@using TestOnion.Models

<form asp-action="AddCompany" role="form">
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="CompanyNamme" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="CompanyNamme" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyIdentity" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-6">
                        <input asp-for="CompanyIdentity" class="form-control" />
                    </div>
                </div>
                <input type="submit" value="Создать" class="btn btn-outline-dark" />
            </div>
        </div>
    </div>
</form>
