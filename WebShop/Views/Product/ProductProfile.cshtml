@model ProductViewModel
@using TestOnion.Models

<form asp-action="ProductProfile" role="form">

    <div class="modal-body form-horizontal">
        <div class="row">
            <input asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProductName" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <input asp-for="ProductName" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <input asp-for="Price" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <input asp-for="ProductDescription" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ProductNumber" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <input asp-for="ProductNumber" class="form-control" readonly />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CompanyName" class="col-lg-3 col-sm-3 control-label"></label>
                <div class="col-lg-6">
                    <input asp-for="CompanyName" class="form-control" readonly />
                </div>
            </div>
            <a id="IndexProductModal" data-toggle="modal" asp-action="Index" data-target="#modal-action-product" class="btn btn-light">
                                <i class="glyphicon glyphicon-trash"></i>  General</a>
        </div>
    </div>
</form>